{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "removeComments": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["vite/client"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src"]
}
